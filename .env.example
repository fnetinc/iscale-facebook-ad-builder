# Database (PostgreSQL required)
DATABASE_URL=postgresql://user:password@localhost:5432/facebook_ad_builder

# CORS (comma-separated list of allowed origins)
ALLOWED_ORIGINS=https://your-frontend.com,https://your-app.railway.app

# Auth
SECRET_KEY=your-secret-key-generate-with-python-secrets
# ACCESS_TOKEN_EXPIRE_MINUTES=30     # Optional, default 30 minutes
# REFRESH_TOKEN_EXPIRE_DAYS=7        # Optional, default 7 days

# AI Services
GEMINI_API_KEY=your-gemini-api-key
FAL_AI_API_KEY=your-fal-ai-api-key
KIE_AI_API_KEY=your-kie-ai-api-key

# Cloudflare R2 Storage
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=your-bucket-name
R2_PUBLIC_URL=https://your-bucket.r2.dev

# Facebook Marketing API
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
FACEBOOK_AD_ACCOUNT_ID=your-ad-account-id
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
# FACEBOOK_ADS_LIBRARY_TOKEN=  # Optional, falls back to FACEBOOK_ACCESS_TOKEN

# Frontend env vars (VITE_ prefix required for Vite)
VITE_API_URL=http://localhost:8000/api/v1
VITE_FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
VITE_FACEBOOK_AD_ACCOUNT_ID=your-ad-account-id
VITE_FACEBOOK_API_VERSION=v24.0

# Supabase (optional, only if using Supabase)
# VITE_SUPABASE_URL=https://your-project.supabase.co
# VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Facebook Scraper (for ad library scraping with Playwright)
FB_SCRAPER_EMAIL=your-facebook-email
FB_SCRAPER_PASSWORD=your-facebook-password

# Testing (for Playwright e2e tests)
TEST_EMAIL=test@example.com
TEST_PASSWORD=your-test-password
BASE_URL=http://localhost:5173
# TEST_DATABASE_URL=  # Optional, falls back to DATABASE_URL

# Admin user (optional - for init_db.py)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-admin-password
